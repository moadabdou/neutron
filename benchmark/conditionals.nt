use time;

// Conditional Statements Benchmark
// Tests the speed of if-else conditional evaluations

say("===========================================");
say("         CONDITIONAL STATEMENTS BENCHMARK");
say("===========================================");
say("");

// Test simple conditional performance
say("Testing simple conditional performance...");
var startTime = time.now();

var i = 0;
var result = 0;

// Perform 100,000 conditional evaluations
while (i < 100000) {
    if (i % 2 == 0) {
        result = result + 1;
    } else {
        result = result - 1;
    }
    i = i + 1;
}

var endTime = time.now();
var duration = endTime - startTime;

say("Performed 100,000 conditional evaluations");
say("Final result: " + str(result));
say("Duration: " + duration + " milliseconds");
say("Average time per evaluation: " + (duration / 100000) + " milliseconds");
say("");

// Test nested conditional performance
say("Testing nested conditional performance...");
startTime = time.now();

i = 0;
result = 0;

// Perform 100,000 nested conditional evaluations
while (i < 100000) {
    if (i % 2 == 0) {
        if (i % 4 == 0) {
            result = result + 2;
        } else {
            result = result + 1;
        }
    } else {
        if (i % 3 == 0) {
            result = result - 2;
        } else {
            result = result - 1;
        }
    }
    i = i + 1;
}

endTime = time.now();
duration = endTime - startTime;

say("Performed 100,000 nested conditional evaluations");
say("Final result: " + str(result));
say("Duration: " + duration + " milliseconds");
say("Average time per evaluation: " + (duration / 100000) + " milliseconds");
say("");

say("===========================================");
say("         BENCHMARK COMPLETE");
say("===========================================");