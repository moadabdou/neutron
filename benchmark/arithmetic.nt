use time;

// Arithmetic Operations Benchmark
// Tests the speed of basic arithmetic operations

say("===========================================");
say("         ARITHMETIC OPERATIONS BENCHMARK");
say("===========================================");
say("");

// Test addition performance
say("Testing addition performance...");
var startTime = time.now();

var i = 0;
var result = 0;

// Perform 100,000 additions
while (i < 100000) {
    result = result + i;
    i = i + 1;
}

var endTime = time.now();
var duration = endTime - startTime;

say("Performed 100,000 additions");
say("Final result: " + result);
say("Duration: " + duration + " milliseconds");
say("Average time per operation: " + (duration / 100000) + " milliseconds");
say("");

// Test multiplication performance
say("Testing multiplication performance...");
startTime = time.now();

i = 0;
result = 1;

// Perform 100,000 multiplications
while (i < 100000) {
    result = result * 2;
    i = i + 1;
}

endTime = time.now();
duration = endTime - startTime;

say("Performed 100,000 multiplications");
say("Final result: " + result);
say("Duration: " + duration + " milliseconds");
say("Average time per operation: " + (duration / 100000) + " milliseconds");
say("");

// Test mixed arithmetic operations
say("Testing mixed arithmetic operations...");
startTime = time.now();

i = 0;
result = 0;

// Perform 100,000 mixed operations
while (i < 100000) {
    result = (result + i) * 2 - i;
    i = i + 1;
}

endTime = time.now();
duration = endTime - startTime;

say("Performed 100,000 mixed arithmetic operations");
say("Final result: " + result);
say("Duration: " + duration + " milliseconds");
say("Average time per operation: " + (duration / 100000) + " milliseconds");
say("");

say("===========================================");
say("         BENCHMARK COMPLETE");
say("===========================================");