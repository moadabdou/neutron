// While loop example with workarounds
say("While Loop Examples with Workarounds");

// This works - small iteration count
say("Example 1: Small iteration count");
var i = 0;
while (i < 5) {
    say("Count: " + str(i));
    i = i + 1;
}

say("");

// This shows how to handle complex conditions
say("Example 2: Complex conditions workaround");
var x = 0;
var y = 10;
while (x < 5) {
    // Simulate: while (x < 5 && y > 0)
    if (y <= 0) {
        break;  // Exit loop if second condition is false
    }
    say("x: " + str(x) + ", y: " + str(y));
    x = x + 1;
    y = y - 1;
}

say("");
say("Examples completed successfully!");