// Test Script: Step 2 (Adding For-Loops and Functions)
use convert;
say("--- Test Step 2: For-Loops and Functions ---");

say("\n--- Variables & Arithmetic ---");
var a = 10;
var b = 20;
say("a + b = " + (a + b));

say("\n--- Control Flow (If) ---" );
if (a < b) {
    say("If statement works (correct)");
} else {
    say("If statement FAILED");
}

say("\n--- Loop (While) ---");
var i = 0;
while (i < 3) {
    say("While Loop: " + i);
    i = i + 1;
}


say("\n--- Loop (For) ---");
for (var k = 0; k < 3; k = k + 1) {
    say("For Loop: " + str(k));
}

say("\n--- Functions ---");
fun multiply(x, y) {
    return x * y;
}
var product = multiply(a, b);
say("Function multiply(10, 20) result: " + product);


say("\n--- Step 2 Test Finished ---");
