// example.nt - Example Neutron program with control flow

// Print a welcome message
print("Welcome to Neutron!");

// Declare some variables
var x = 10;
var y = 5;
var name = "Neutron";

// Basic arithmetic 
var sum = x + y;
var product = x * y;

print("Sum: " + sum);
print("Product: " + product);

// Control flow with if-else
if (x > y) {
    print("x is greater than y");
} else {
    print("x is not greater than y");
}

// Another if statement
if (name == "Neutron") {
    print("Hello, Neutron!");
} else {
    print("You are not Neutron!");
}

// Simple conditional logic
var a = 15;
var b = 7;
var result = 0;

if (a > b) {
    result = a;
} else {
    result = b;
}

print("Max of 15 and 7 is: " + result);