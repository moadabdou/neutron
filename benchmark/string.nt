use time;

// String Operations Benchmark
// Tests the speed of string concatenation and operations

say("===========================================");
say("         STRING OPERATIONS BENCHMARK");
say("===========================================");
say("");

// Test string concatenation performance
say("Testing string concatenation performance...");
var startTime = time.now();

var i = 0;
var result = "";

// Perform 10,000 string concatenations
while (i < 10000) {
    result = result + "a";
    i = i + 1;
}

var endTime = time.now();
var duration = endTime - startTime;

say("Performed 10,000 string concatenations");
say("Final string length: " + str(string_length(result)));
say("Duration: " + duration + " milliseconds");
say("Average time per operation: " + (duration / 10000) + " milliseconds");
say("");

// Test string building with numbers
say("Testing string building with numbers...");
startTime = time.now();

i = 0;
result = "";

// Perform 10,000 string concatenations with numbers
while (i < 10000) {
    result = result + str(i);
    i = i + 1;
}

endTime = time.now();
duration = endTime - startTime;

say("Performed 10,000 string concatenations with numbers");
say("Final string length: " + str(string_length(result)));
say("Duration: " + duration + " milliseconds");
say("Average time per operation: " + (duration / 10000) + " milliseconds");
say("");

say("===========================================");
say("         BENCHMARK COMPLETE");
say("===========================================");